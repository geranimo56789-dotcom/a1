<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiApp1.Views.PredictionsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp1.ViewModels"
             Title="Check Predictions"
             BackgroundColor="White">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*,Auto" BackgroundColor="White">
            <Button Grid.Column="0"
                    Text="â˜°"
                    FontSize="20"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    Clicked="OnMenuClicked" />
            <Image Grid.Column="1"
                   Source="1.jpg"
                   HeightRequest="40"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Your predictions" FontSize="24" FontAttributes="Bold" TextColor="Black" />

            <CollectionView ItemsSource="{Binding UserPredictions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:PredictionViewModel">
                        <Frame BackgroundColor="White" BorderColor="#E0E0E0" CornerRadius="8" HasShadow="True" Padding="12" Margin="0,6">
                            <Grid ColumnDefinitions="*,Auto,*" RowDefinitions="Auto,Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="4" HorizontalOptions="Center">
                                    <Image Source="{Binding HomeLogoPath}" WidthRequest="40" HeightRequest="40" />
                                    <Label Text="{Binding Prediction.HomeTeamCode}" TextColor="Black" FontAttributes="Bold" HorizontalOptions="Center" />
                                    <Label Text="{Binding Prediction.HomeTeam}" TextColor="Gray" FontSize="12" HorizontalOptions="Center" />
                                </VerticalStackLayout>
                                <Label Grid.Column="1" Text="VS" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center" />
                                <VerticalStackLayout Grid.Column="2" Spacing="4" HorizontalOptions="Center">
                                    <Image Source="{Binding AwayLogoPath}" WidthRequest="40" HeightRequest="40" />
                                    <Label Text="{Binding Prediction.AwayTeamCode}" TextColor="Black" FontAttributes="Bold" HorizontalOptions="Center" />
                                    <Label Text="{Binding Prediction.AwayTeam}" TextColor="Gray" FontSize="12" HorizontalOptions="Center" />
                                </VerticalStackLayout>
                                <Label Grid.ColumnSpan="3" Grid.Row="1" Text="{Binding DisplayText}" TextColor="#6B9B47" HorizontalOptions="Center" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
